<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    var error = document.getElementById("err");
    var success = document.getElementById("succ");

    if (error != null) {
        function GFG_Fun() {
            setTimeout(function () {
                $('#err').hide();
            }, 3000);
        };
        GFG_Fun();
    }
    if (success != null) {
        function GFG_Fun() {
            setTimeout(function () {
                $('#succ').hide();
            }, 6000);
        };
        GFG_Fun();
    }
</script>
